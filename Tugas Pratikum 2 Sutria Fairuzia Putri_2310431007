Tujuan=str(input ("Tujuan="))
if Tujuan=="Padang": 
    Harga = 80000
elif Tujuan=="Medan": 
    Harga = 150000
elif Tujuan=="Jambi": 
    Harga =500000
elif Tujuan=="Pekanbaru": 
    Harga = 500000
elif Tujuan=="Payakumbuh": 
    Harga = 60000
elif Tujuan=="Jakarta": 
    Harga = 800000


Kelas=str(input("Kelas="))
if Kelas=="Ekonomi": 
    Biaya = 10000
elif Kelas=="First": 
    Biaya = 20000
elif Kelas=="Bisnis": 
    Biaya = 30000

Jumlah_Tiket=int(input("Jumlah Tiket="))
if Jumlah_Tiket>=3: Diskon=0.05 
elif Jumlah_Tiket>=5: Diskon=0.1

Total = ( Harga + Biaya ) * Jumlah_Tiket
Harga_Diskon = ( Total * Diskon )
Harga_Setelah_Diskon = (Total - Diskon )

print("Total=Rp ", Total)
print("Harga Diskon =Rp ", Harga_Diskon)
print("Harga Setelah Diskon=Rp ", Harga_Setelah_Diskon)

